{
    "compilerOptions": {
      "target": "es2019",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": false,
      "noEmitOnError": true
    },
    "include": ["src/app.ts"],
    "exclude": ["node_modules"],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ]
  }
  